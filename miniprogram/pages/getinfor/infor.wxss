.background{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;

}
.box{
  display: flex;
  justify-content: center;
  color: white;
  font-size:12px;
}
.content{
  width: 260px;
  height: 380px;
  background: pink;
  opacity: 0.8;
  border-radius: 30px;
  margin-top: 50px;

}
.avatarbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
  bottom: 40px;
 
}
.avatar{
  width: 80px;
  height: 80px;
  border-radius:50px;

}
.nickbox{
  display: flex;
  justify-content: center;
  position: relative;
  bottom: 30px;
  right: 30px;
}
.linebox,.substancebox{
  display: flex;
  justify-content: center;

}
.line{
  background: white;
  width: 75%;
  height: 1px;
  position: relative;
  bottom: 20px;
}
.substance{
  width: 82%;
  height: 230px;
  border: 1px solid white;
  border-radius: 30px;
  display: flex;
  justify-content:center;
  flex-direction: column;
}
.firstbox{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  justify-content: space-around;
}
.name , .height,.sex, .age{
  position: relative;
  right: 15px;
  bottom: 32px;
}
.secondbox{
  display: flex;
  flex-direction: row;
  justify-content: left;
  margin-top: 10px;
}
.phone,.wxnumb{
  position: relative;
  left: 15px;
  bottom: 20px;
}
.introduce{
  position: relative;
  left: 5px;
  bottom: 22px;
  display: block;
  text-overflow:ellipsis;
   word-break:break-all;
 
}
.get{
  margin-top: 5px;
}
.btn{
  width: 50px;
  border-radius: 30px;
  background:#FFF0F5 ;
  color: palevioletred;
}